{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "12.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" }
  ],
  "uid": "k8s-cluster-overview",
  "title": "Kubernetes Cluster â€” Node Health (Prometheus)",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 2,
  "editable": true,
  "graphTooltip": 1,
  "refresh": "30s",
  "style": "dark",
  "time": { "from": "now-1h", "to": "now" },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "templating": {
    "list": [
      {
        "name": "node",
        "label": "Node",
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "query": "label_values(up{job=\"node-exporter\"}==1, instance)",
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "current": { "text": "All", "value": [".*"] }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Nodes Online",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "refId": "A", "expr": "count(up{job=\"node-exporter\"}==1)" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Avg CPU %",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "refId": "A", "expr": "avg(100 * (1 - avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\",instance=~\"$node\"}[5m]))))" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Avg Memory %",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "refId": "A", "expr": "avg(100 * (1 - (node_memory_MemAvailable_bytes{instance=~\"$node\"} / node_memory_MemTotal_bytes{instance=~\"$node\"})))" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Avg Disk %",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "refId": "A",
          "expr": "avg(100 * (1 - (sum by (instance) (node_filesystem_avail_bytes{instance=~\"$node\",fstype!~\"tmpfs|overlay|squashfs|aufs|nsfs|autofs|ramfs|rootfs\",mountpoint!~\"/run.*|/var/lib/docker.*|/var/lib/containerd.*|/var/lib/kubelet.*|/snap.*|/var/snap.*|/boot/efi\"}) / sum by (instance) (node_filesystem_size_bytes{instance=~\"$node\",fstype!~\"tmpfs|overlay|squashfs|aufs|nsfs|autofs|ramfs|rootfs\",mountpoint!~\"/run.*|/var/lib/docker.*|/var/lib/containerd.*|/var/lib/kubelet.*|/snap.*|/var/snap.*|/boot/efi\"}))))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "CPU Usage by Node",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 4 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (1 - avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\",instance=~\"$node\"}[5m])))",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100, "decimals": 1 },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 11,
      "type": "timeseries",
      "title": "Memory Usage by Node",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 4 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes{instance=~\"$node\"} / node_memory_MemTotal_bytes{instance=~\"$node\"}))",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100, "decimals": 1 },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 12,
      "type": "timeseries",
      "title": "Disk Usage by Node (All real filesystems)",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 13 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (1 - (sum by (instance) (node_filesystem_avail_bytes{instance=~\"$node\",fstype!~\"tmpfs|overlay|squashfs|aufs|nsfs|autofs|ramfs|rootfs\",mountpoint!~\"/run.*|/var/lib/docker.*|/var/lib/containerd.*|/var/lib/kubelet.*|/snap.*|/var/snap.*|/boot/efi\"}) / sum by (instance) (node_filesystem_size_bytes{instance=~\"$node\",fstype!~\"tmpfs|overlay|squashfs|aufs|nsfs|autofs|ramfs|rootfs\",mountpoint!~\"/run.*|/var/lib/docker.*|/var/lib/containerd.*|/var/lib/kubelet.*|/snap.*|/var/snap.*|/boot/efi\"})))",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100, "decimals": 1 },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 13,
      "type": "timeseries",
      "title": "Network Traffic (Recv/Tx)",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 13 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (instance) (rate(node_network_receive_bytes_total{device!~\"lo|veth.*|docker.*|cni.*|flannel.*|cali.*\",instance=~\"$node\"}[5m]))",
          "legendFormat": "{{instance}} - Receive"
        },
        {
          "refId": "B",
          "expr": "sum by (instance) (rate(node_network_transmit_bytes_total{device!~\"lo|veth.*|docker.*|cni.*|flannel.*|cali.*\",instance=~\"$node\"}[5m]))",
          "legendFormat": "{{instance}} - Transmit"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "Bps", "decimals": 0 },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "id": 14,
      "type": "timeseries",
      "title": "System Load (1m)",
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 22 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "refId": "A", "expr": "node_load1{instance=~\"$node\"}", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "right" } }
    },
    {
      "id": 15,
      "type": "timeseries",
      "title": "Uptime (days)",
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 22 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "refId": "A", "expr": "(time() - node_boot_time_seconds{instance=~\"$node\"}) / 86400", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "d", "decimals": 1 }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "right" } }
    }
  ]
}
